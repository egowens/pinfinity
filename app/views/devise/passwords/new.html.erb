<% provide(:title, 'Forgot Your Password?') %>
<div class="container">
  <div class="row">
    <div class="col col-sm-10 col-sm-offset-1">
    <%= devise_error_messages! %>
      <div class="well">
        <h2>Forgot your password?</h2>

        <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>

          <div><%= f.label :email %><br />
          <%= f.email_field :email, class: "form-control", autofocus: true %></div>

          <div><%= f.submit "Send me reset password instructions", class: "btn btn-lg btn-primary" %></div>
        <% end %>

        <%= render "devise/shared/links" %>
      </div>
    </div>
  </div>
</div>
