<% provide(:title, @user.username)%>
<div class="container-fluid">
  <div class="row">
    <div class="col col-sm-4" id="pin-col">
      <div class="well" id="user-pin-form">
        <h1>
          <%= gravatar_for @user %>
          <%= @user.username %>
        </h1>
        <h2>
          <%= pluralize(@user.pins.count, "Equations") %>
        </h2>
      </div>
    </div>
    <div class = "col col-sm-8">
      <% if @user.pins.any? %>
        <h2><%= pluralize(@user.pins.count, "Pinned Equation") %></h2>
        <div class="row" id="pin-row">
          <%= render @pins %>
        </div>
      <% else %>
        <h2>No Equations Yet</h2>
      <% end %>
    </div>
  </div>
</div>


<%= javascript_tag do %>
  MathJax.Hub.Queue(["Typeset",MathJax.Hub]);
<% end %>
