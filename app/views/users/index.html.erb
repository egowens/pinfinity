<% provide(:title, 'All Users' ) %>
<h1 id="users-list">All Users</h1>

<%= will_paginate %>

<ul class="users">
  <% @users.each do |user| %>
    <li>
      <h4 id="user-info">
        <%= gravatar_for user, size: 52 %>
        <%= link_to user.username, user %>
         | <%= pluralize(user.pins.count, "Pinned Equations") %>
      </h4>
    </li>
  <% end %>
</ul>

<%= will_paginate %>
